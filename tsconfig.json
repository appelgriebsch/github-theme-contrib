{
  "compilerOptions": {
    "strict": true,
    "target": "ES2016",
    "module": "commonjs",
    "lib": ["ESNext"],
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types", "src/types"],
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true
  },
  "include": ["src/"]
}
